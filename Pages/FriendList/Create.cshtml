@page
@model BookRepository.Pages.FriendList.CreateModel
@{
    ViewData["Title"] = "Join";
}

<br />
<h2 class="text-info">Become Member</h2>
<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Friend.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Friend.Name" class="form-control" />
            </div>
            <span asp-validation-for="Friend.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Friend.Location"></label>
            </div>
            <div class="col-6">
                <input asp-for="Friend.Location" class="form-control" />
            </div>
            <span asp-validation-for="Friend.Location" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Friend.Phone"></label>
            </div>
            <div class="col-6">
                <input asp-for="Friend.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Friend.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Join" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}